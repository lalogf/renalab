<div class = "row">


  <div class="col-md-12">

    <%= bootstrap_form_for @paciente do |f| %>
    <% if @paciente.errors.any? %>

    <div class="alert alert-danger" role="alert">
      <h2><%= pluralize(@paciente.errors.count, "error") %> prohibited this paciente from being saved:</h2>
      <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
      <span class="sr-only">Error:</span>
      <ul>
        <% @paciente.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <div class="col-md-6">
      <%= f.text_field(:primer_nombre, placeholder: "Primer Nombre") %>
    </div>
    <div class="col-md-6">
      <%= f.text_field(:segundo_nombre, placeholder: "Segundo Nombre") %>
    </div>
    <div class="col-md-6">
      <%= f.text_field(:apellido_paterno, placeholder: "Apellido Paterno") %>
    </div>
    <div class="col-md-6">
      <%= f.text_field(:apellido_materno, placeholder: "Apellido Materno") %>
    </div>
    <div class="col-md-6">
      <%= f.date_select(:nacimiento, value: Date.today, order: [:day, :month, :year], use_month_names: ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio', 'Julio', 'Agosto', 'Septiembre', 'Octubre', 'Noviembre','Diciembre'], :start_year => 1910, :end_year => 2015 ) %>
    </div> 
    <div class="col-md-6">
      <%= f.text_field(:dni, label:"DNI", placeholder:"12345678")%>
    </div>
    <div class="col-md-7">
      <%= f.text_field(:email, placeholder: "mail@example.com")%>
    </div>
    <div class="col-md-12">
      <%= f.text_field(:direccion, placeholder: "Calle San Martin 123 Int B")%>
    </div>
    <div class="col-md-4">
      <%= f.select(:departamento, ["Departamento"])%>
    </div>

    <div class="col-md-4">
      <%= f.select(:provincia, ["Provincia"])%>
    </div>
    <div class="col-md-4">
      <%= f.select(:distrito, ["Distrito"])%>
    </div>




    <div class="col-md-12">
      <%= f.submit  "Guardar", class: "btn btn-success" %>
    </div>
    <% end %>
  </div>
</div>